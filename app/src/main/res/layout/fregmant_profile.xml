<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fregmant_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="110dp"
            android:paddingLeft="20dp"
            android:src="@drawable/userimages" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editprofile"
            android:layout_marginTop="40dp"
            android:paddingLeft="20sp"
            android:text="@string/profile_username"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/editprofile_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/username"
            android:layout_alignParentTop="true"
            android:paddingLeft="20sp"
            android:paddingTop="70dp"
            android:text="@string/profile_firstname"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/country_text_view"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignStart="@+id/ratingBar2"
            android:layout_marginStart="2dp"
            android:layout_marginTop="22dp"
            android:paddingLeft="20sp"
            android:text="@string/profile_country_text_view"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp" />

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/country_text_view"
            android:layout_marginStart="92dp" />

        <Button
            android:id="@+id/editprofile"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ratingBar2"
            android:layout_below="@+id/ratingBar2"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round"
            android:text="@string/profile_editprofile"
            android:textColor="@android:color/white" />


    </RelativeLayout>

</FrameLayout>