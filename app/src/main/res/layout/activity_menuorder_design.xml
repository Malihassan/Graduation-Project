<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".menuorder_design"
    >


        <ImageView
            android:id="@+id/menuorder_image"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/supermarket"
            android:scaleType = "centerCrop"
            />

    <LinearLayout
        android:layout_width="242dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingRight="31dp"
        >

        <TextView
            android:id="@+id/menuorder_name"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:paddingRight="30dp"
            android:text="المطبخ ارز مصرى ,1كم"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:descendantFocusability="blocksDescendants"
            >

            <Button
                android:id="@+id/decrease"
                android:layout_width="52dp"
                android:layout_height="33dp"
                android:background="@drawable/rounddecrase"
                android:text="-"
                android:textColor="@android:color/white"

                />

            <TextView
                android:id="@+id/showvalue"
                android:layout_width="51dp"
                android:layout_height="33dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/increase"
                android:layout_width="52dp"
                android:layout_height="33dp"
                android:background="@drawable/roundincrase"
                android:paddingRight="30dp"
                android:text="+"
                android:textColor="@android:color/white"

                />
        </LinearLayout>
        <Button
            android:id="@+id/addinbox"
            android:layout_width="155dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:text="اضافة الى السلة "
            android:textColor="@android:color/white"

            />
    </LinearLayout>
</LinearLayout>